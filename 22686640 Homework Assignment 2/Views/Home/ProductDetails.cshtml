@model _22686640_Homework_Assignment_2.Models.ProductViewModel
@{
    ViewBag.Title = "Product Details";
}

<div style="max-width: 1200px; margin: auto; padding: 20px; background-color: #fff; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; color: #008080;">@Model.ProductName</h2>

    <div style="display: flex; flex-direction: row; justify-content: space-between; margin-bottom: 20px;">
        <div style="flex: 1; max-width: 400px;">
            <!-- Display the product image dynamically from the model -->
            <img src="@Url.Content(Model.ImageURL)" alt="@Model.ProductName" style="width: 100%; height: auto; object-fit: cover; border-radius: 10px; border: 4px solid #ffccd5;" />
        </div>

        <div style="flex: 2; margin-left: 20px;">
            <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                <tr>
                    <th style="padding: 10px; text-align: left; color: #ffccd5; width: 150px;">Brand:</th>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ffccd5;">@Model.BrandName</td>
                </tr>
                <tr>
                    <th style="padding: 10px; text-align: left; color: #ffccd5; width: 150px;">Category:</th>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ffccd5;">@Model.CategoryName</td>
                </tr>
                <tr>
                    <th style="padding: 10px; text-align: left; color: #ffccd5; width: 150px;">Model Year:</th>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ffccd5;">@Model.ModelYear</td>
                </tr>
                <tr>
                    <th style="padding: 10px; text-align: left; color: #ffccd5; width: 150px;">List Price:</th>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ffccd5;">@Model.ListPrice.ToString("C")</td>
                </tr>
                <tr>
                    <th style="padding: 10px; text-align: left; color: #ffccd5; width: 150px;">Store Name:</th>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ffccd5;">@Model.StoreName</td>
                </tr>
            </table>
        </div>
    </div>

    <table style="width: 100%; margin-top: 20px;">
        <tr>
            <td style="width: 100px; vertical-align: top;">
                <img src="@Model.SellerImage" alt="@Model.SellerName" style="width: 100%; height: auto; object-fit: cover; border-radius: 50%; border: 2px solid #ffccd5;" />
            </td>
            <td style="vertical-align: top; padding-left: 20px;">
                <h5 style="color: #008080;">Seller: @Model.SellerName</h5>
                <h5 style="color: #008080;">Phone Number: @Model.SellerPhone</h5>
                <h5 style="color: #008080;">Email Address: @Model.SellerEmail</h5>
            </td>
        </tr>
    </table>


    <div style="margin-top: 30px; text-align: center;">
        <a href="@Url.Action("BrandBikes", "Home", new { brandId = ViewBag.BrandId })" class="btn" style="border-radius: 15px; background-color: #008080; color: white; padding: 10px 20px; text-decoration: none;">
            Return to @Model.BrandName's Page
        </a>
    </div>
</div>

